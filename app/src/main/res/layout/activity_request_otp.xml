<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/holo_gray_bright">

    <include
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header_main"/>

    <ImageView
        android:id="@+id/iv_footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/nic"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ऐप वर्ज़न 1.0"
        android:layout_above="@+id/iv_footer"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_margin="20dp"
                android:id="@+id/iv_logo1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/bihar_logo"
                android:padding="12dp"
                android:background="@drawable/circular_shape_white"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter your registered mobile number."
                android:layout_below="@id/iv_logo1"
                android:id="@+id/tv_desc"
                android:layout_margin="20dp"
                android:textColor="@color/holo_green_dark"
                android:textAlignment="center"/>

            <LinearLayout
                android:id="@+id/ll_input"
                android:layout_below="@+id/tv_desc"
                android:padding="12dp"
                android:background="@drawable/textboxshape3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="रेजिस्ट्रेशन संख्या"-->
<!--                    android:textColor="@color/black_overlay"-->
<!--                    android:textSize="12sp"/>-->

<!--                <EditText-->
<!--                    android:layout_marginTop="4dp"-->
<!--                    android:id="@+id/et_reg_no"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:background="@drawable/textboxshape"-->
<!--                    android:hint="रेजिस्ट्रेशन संख्या डालें"-->
<!--                    android:padding="10dp"-->
<!--                    android:singleLine="true"-->
<!--                    android:inputType="number"-->
<!--                    android:textColor="#222222"-->
<!--                    android:focusableInTouchMode="true"-->
<!--                    android:textSize="15sp" />-->

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number"
                    android:textColor="@color/black_overlay"
                    android:textSize="12sp"/>

                <EditText
                    android:layout_marginTop="4dp"
                    android:id="@+id/et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textboxshape"
                    android:hint="Enter Mobile Number"
                    android:padding="10dp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="#222222"
                    android:focusableInTouchMode="true"
                    android:textSize="15sp" />

                <Button
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:id="@+id/email_sign_in_button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/buttonshape"
                    android:text="  Login with Link 1 (For CSC Login )  "
                    android:textColor="#ffff"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/email_sign_in_button2"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/buttonshape"
                    android:onClick="onRequestOtp"
                    android:text="    Get Otp    "
                    android:textColor="#ffff"
                    android:textSize="17sp" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>